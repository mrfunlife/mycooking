<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mycooking_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/TextViewWhiteBold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_superbig"
        android:text="Chào mừng bạn đến với MyCooking"
        android:textSize="16sp" />

    <android.support.v4.view.ViewPager
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/loginViewPager"
        android:layout_marginTop="@dimen/margin_superbig">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/loginLayoutDots"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/loginViewPager"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/boder_llayout_stroke_white"
        android:layout_margin="@dimen/margin_big"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end">
    </LinearLayout>
</RelativeLayout>