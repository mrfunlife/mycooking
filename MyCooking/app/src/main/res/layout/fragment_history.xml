<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/whitelight"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_article"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/bg_history"
                app:layout_collapseMode="parallax" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:alpha="0.5"
                android:background="@color/color_black"
                android:layout_height="280dp">
            </RelativeLayout>
            <include layout="@layout/bar_custom_tranparent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/foodtwo"
                app:civ_border_color="@color/whitelight"
                app:civ_border_width="1dp"
                android:layout_height="100dp" />
        </RelativeLayout>
        <include layout="@layout/content_article" />
    </LinearLayout>
</ScrollView>
