<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/whitelight"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_article"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/bg_login"
                app:layout_collapseMode="parallax" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:alpha="0.5"
                android:background="@color/color_black"
                android:layout_height="280dp">
            </RelativeLayout>
            <include layout="@layout/bar_custom_tranparent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/haphuong"
                app:civ_border_color="@color/whitelight"
                app:civ_border_width="1dp"
                android:layout_height="90dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:background="@color/color_black_alpha"
                android:layout_alignParentBottom="true"
                android:weightSum="4"
                android:layout_height="wrap_content">
                <mycooking.funlife.com.vn.mycooking.customview.slideunlockview.ios.IosSlider
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:id="@+id/fragmentHistoryIosSlider"
                    android:layout_height="50dp">
                </mycooking.funlife.com.vn.mycooking.customview.slideunlockview.ios.IosSlider>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_foward"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:layout_height="wrap_content">
            <TextView
                style="@style/TextViewBoldBrush"
                android:id="@+id/fragmentHistoryTitle"
                android:text="Danh sách thực đơn đã dùng"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/historyMenuRecylerView"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
